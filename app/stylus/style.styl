// colors
dark-blue = #89bdd3
light = #e3e3e3
blue = #9ad3de


a, a:hover
	text-decoration none 
	color black
	

.container-fluid
	padding 0px !important


#main-area
	#header
		text-align right
		background linear-gradient(to right, #E0EAFC , #CFDEF3)
		padding 19px
		color #fff
		

.main-area-content
	padding 20px
	padding-left 50px
	background-color #fff
	
#home
	h4
		line-height 2em
	img
		width 150px
		height 150px
		margin 10px
		

#karmienie
	#karmienie-header
		line-height 2em
		border-bottom 1px solid black
		.add-btn
			font-size 10px 
			line-height 15px
			background-color #fff
			border none
			outline none
			box-shadow 2px 2px 10px -4px black
			padding 5px
			float right
			i 
				margin-left 5px
				line-height @line-height
	#animal-list
		list-style-position inside
		.animal-list-item
			padding 5px
			font-size 20px
	

#sidebar
	text-align center
	color #fff
	padding 0px
	box-shadow 2px 0px 30px -10px  black
	z-index 1000
	@media screen and (min-width: 757px)
		height 100vh
	#logo
		background linear-gradient(to left, #E0EAFC , #CFDEF3)
		line-height 100%
		h2 > a 
			display block
			text-decoration none
			color #fff
			cursor pointer
	#menu-sidebar
		background-color #fff
		padding 0px
		> ul
			list-style-type none
			padding 0px
			li 
				cursor pointer
				a 
					color dark-blue 
					text-decoration none
					display block
					width 100%
					padding 10px
					font-size 1.2em
					&:hover
						background-color blue
						color #fff