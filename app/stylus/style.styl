// colors
dark = #3b3a36
light = #e9ece5
blue = #b3c2bf

.container-fluid
	padding 0px !important
	


#main-area
	#header
		text-align right
		background-color dark
		padding 5px
		color #fff

#sidebar
	text-align center
	background-color dark
	color #fff
	padding 0px
	#logo
		padding 10px
	#menu-sidebar
		background-color light
		padding 0px
		> ul
			list-style-type none
			padding 0px
			li 
				cursor pointer
				a 
					color dark 
					text-decoration none
					display block
					width 100%
					padding 10px
					font-size 1.2em
					&:hover
						background-color blue
						color #fff