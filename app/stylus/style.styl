// colors
dark-blue = #89bdd3
light = #ECF0F1
blue = #9ad3de


body
	background-color #fff


a, a:hover
	text-decoration none 
	color black
	

.container-fluid
	padding 0px !important






// main area
#main-area
	position absolute
	top 0px
	right 0px
	#header
		text-align right
		background linear-gradient(to right, #E0EAFC , #CFDEF3)
		padding 19px
		color #fff
		
.main-area-content
	padding 20px
	padding-left 50px
	background-color #fff
	


// home page 
#home
	h4
		line-height 2em
	img
		width 150px
		height 150px
		margin 10px

.action-btn
	font-size 10px 
	line-height 15px
	background-color #fff
	border none
	outline none
	box-shadow 2px 2px 10px -4px black
	padding 5px
	float right
	i 
		margin-left 5px
		line-height @line-height

		



// karmienie page
#karmienie
	#karmienie-header
		line-height 2em
		border-bottom 1px solid light
	#animal-list
		list-style-position inside
		.animal-list-item
			margin 5px
			padding 5px
			font-size 20px
			&:nth-child(even)
				border-top 1px solid light
				border-bottom 1px solid light

// add animal
#add-animal-box
	padding 20px
	h1
		line-height 2em
		border-bottom 1px solid light 
	div
		padding 10px
		margin-top 10px
		label
			font-size 17px
			width 150px
		input[type="text"]
			outline none
			border none
			box-shadow 5px 5px 10px -7px black
			font-size 17px
			padding 5px
			transition-duration .3s
		input[type='submit']
			padding 10px
			box-shadow 2px 2px 15px -8px black
			font-size 1.3em
			background-color #fff
			border none
			letter-spacing 3px

// sidebar
#sidebar
	text-align center
	color #fff
	padding 0px
	box-shadow 2px 0px 30px -10px  black
	z-index 1000
	@media screen and (min-width: 757px)
		position fixed
		top 0 
		left 0
		height 100vh
	#logo
		background linear-gradient(to left, #E0EAFC , #CFDEF3)
		line-height 100%
		h2 > a 
			display block
			text-decoration none
			color #fff
			cursor pointer
	#menu-sidebar
		background-color #fff
		padding 0px
		> ul
			list-style-type none
			padding 0px
			li 
				cursor pointer
				a 
					color dark-blue 
					text-decoration none
					display block
					width 100%
					padding 10px
					font-size 1.2em
					&:hover
						background-color blue
						color #fff